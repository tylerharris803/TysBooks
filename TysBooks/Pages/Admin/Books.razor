@page "/admin/books" 
@page "/admin"
@inherits OwningComponentBase<ITysBooksRepository>

<table class="table table-sm table-striped table-bordered">

    <thead>
        <tr>
            <th>Book ID</th>
            <th>Book Title</th>
            <th>Author</th>
        </tr>
    </thead>

    <tbody>
        @if (BookData?.Count() > 0)
        {
            @foreach (TysBooks.Models.Books b in BookData)
            {
        <tr>
            <td>@b.BookId</td>
            <td>@b.Title</td>
            <td>@b.Author</td>

            <td>
                <NavLink class="btn btn-info btn-sm btn-block" href="@GetDetailsUrl(b.BookId)">Details</NavLink>
            </td>

            <td>
                <NavLink class="btn btn-warning btn-sm btn-block" href="@GetEditUrl(b.BookId)">Edit</NavLink>
            </td>

            <td>
                <button class="btn btn-danger btn-sm btn-block"@onclick="@(x => RemoveBook(b))">Delete</button>
            </td>
        </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No Books</td>
            </tr>
        }
    </tbody>

</table>

<NavLink class="btn btn-primary" href="/admin/books/create">Create</NavLink>

@code {

    public ITysBooksRepository repo => Service;

    public IEnumerable<TysBooks.Models.Books> BookData { get; set; }

    protected async override Task OnInitializedAsync()
    {
        await UpdateData();
    }

    public async Task UpdateData()
    {
        BookData = await repo.Books.ToListAsync();
    }

    public string GetDetailsUrl(long id) => $"/admin/books/details/{id}";
    public string GetEditUrl(long id) => $"/admin/books/edit/{id}";
    public async Task RemoveBook (TysBooks.Models.Books b)
    {
        repo.DeleteBook(b);
        await UpdateData();
    }
}
