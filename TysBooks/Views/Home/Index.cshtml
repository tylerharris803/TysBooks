@foreach (Books b in Model.Books)
{
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @b.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>$@b.Price.ToString()</small>
            </span>
        </h4>
    </div>
    <div style="font-weight: bold"class="card-text p-1">@b.Author</div>
    <br />
    <div class="card-text p-2">Publisher: @b.Publisher</div>
    <div class="card-text p-2">ISBN: @b.Isbn</div>
    <div class="card-text p-2">Classification: @b.Classification</div>
    <div class="card-text p-2">Category: @b.Category</div>
    <div class="card-text p-2">@b.PageCount Pages</div>
</div>
}
<div page-blah="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
              page-class="btn" page-class-normal="btn-outline-dark"
              page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>
